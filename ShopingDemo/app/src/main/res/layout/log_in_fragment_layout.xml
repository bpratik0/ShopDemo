<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <abhi.main.shopingdemo.ui.customViews.AppFontBoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textAlignment="center"
        android:textColor="@color/colorBlack" />



        <abhi.main.shopingdemo.ui.customViews.EditTextPlus
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Id"
            style="@style/loginEditTextStyle"
            android:inputType="textEmailAddress" />




        <abhi.main.shopingdemo.ui.customViews.EditTextPlus
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            style="@style/loginEditTextStyle"
            android:inputType="textPassword"/>




     <androidx.appcompat.widget.AppCompatCheckBox
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginRight="20dp"
         android:layout_marginLeft="20dp"
         android:id="@+id/checkbox"
         android:text="Show Password"/>

    <abhi.main.shopingdemo.ui.customViews.ButtonPlus
        android:id="@+id/btn_showPsw"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:gravity="right"
        android:visibility="gone"
        android:layout_gravity="right"
        android:text="Log IN" />

    <abhi.main.shopingdemo.ui.customViews.ButtonPlus
        android:id="@+id/btn_hidePsw"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:visibility="gone"
        android:text="Log In" />
    <abhi.main.shopingdemo.ui.customViews.ButtonPlus
        android:id="@+id/btn_login"
        style="@style/large_button_style"
        android:layout_marginTop="20dp"
        android:text="Log IN" />

    <abhi.main.shopingdemo.ui.customViews.AppFontBoldTextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary" />

    <View
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <abhi.main.shopingdemo.ui.customViews.AppFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Register Yet?"
            android:textSize="14sp" />

        <abhi.main.shopingdemo.ui.customViews.AppFontBoldTextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Create an Account"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
